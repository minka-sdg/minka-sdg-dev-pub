<% content_for(:title) do %>
<%= t(:editing) %> <%= @taxon.name %>
<% end %>

<%= render :partial => 'form_head' %>

<div id="pageheader" class="last column span-24">
  <span class="breadcrumbs">
    <%= link_to t(:back_to_viewing, :taxon => @taxon.name).html_safe, 
                taxon_path(@taxon), :class => 'back crumb' %>
  </span>
  <h2><%= t :editing_taxon, taxon: @taxon.name %></h2>
  <div class="description">
    <% if @taxon.creator -%>
      <%=t :created_by_user_on_date, :user => @taxon.creator.login, :date => l(@taxon.created_at) %>
    <% end -%>
  </div>
</div>

<%= render :partial => "form" %>

<% if @taxon.creator -%>
  <div class="clear description">
    <%=raw t :created_by_user_on_date, user: link_to_user( @taxon.creator ), date: l( @taxon.created_at.to_date, format: :long ) %>
  </div>
<% end -%>

<% if @taxon.updater -%>
  <div class="clear description">
    <%=t :updated_by_user_on_date_html, user: link_to_user( @taxon.updater ), date: l( @taxon.updated_at.to_date, format: :long ) %>
  </div>
<% end -%>
